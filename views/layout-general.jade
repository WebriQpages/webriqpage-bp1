doctype html
html

  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name="viewport" content="width=device-width, initial-scale=1")

    meta(name='description', content= records.site.sitedata[0].metadesc)
    meta(name='author', content= records.site.sitedata[0].metauthor)
    meta(name="keywords" content= records.site.sitedata[0].metakeyword)

    title= records.site.sitedata[0].sitename

    link(rel="icon", href= records.site.sitedata[0].icon, type="image/*")
    link(rel="shortcut icon", href= records.site.sitedata[0].icon, type="img/*")

    <!-- Custom CSS -->
    link(type='text/css', rel='stylesheet', href='css/webriq-bootstrap-material-ui.min.css', media='screen,projection')
    link(type='text/css', rel='stylesheet', href='css/general.css', media='screen,projection')
    link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,200,200italic,300,400italic,300italic,600,600italic,700,700italic', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
    link(rel='stylesheet', type='text/css', href='css/component.css')
    != css()

  body#page-top
    section#header.pt-10.pb-10
      include includes/menu

    section#header-bg

    section.main-container
      .container
        .row
            .col-left.col-sm-12.col-md-8
              block content
            .col-right.col-xs-12.col-sm-7.col-md-4
              .row
                include includes/general-sidebar
    footer
      include includes/footer